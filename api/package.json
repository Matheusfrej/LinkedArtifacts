{
  "name": "linkedartifacts-api",
  "version": "0.1.0",
  "description": "Boilerplate REST API (DDD) with Express + TypeScript + Drizzle ORM",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node-dev --respawn --no-notify --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "prepare": "echo \"Run npm install in /api to install dependencies\""
  },
  "keywords": [
    "express",
    "typescript",
    "drizzle-orm",
    "ddd"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.0",
    "drizzle-orm": "^0.26.0",
    "express": "^4.18.2",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.19.33",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.9",
    "eslint": "^8.45.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.1.6"
  }
}
